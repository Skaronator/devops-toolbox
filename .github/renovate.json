{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["^tools.yaml$"],
      "matchStrings": [
        "repository\\:(!?\\s)(?<depName>.*?)[\\n\\s]+version\\:(!?\\s)(?<currentValue>.*)\\n"
      ],
      "datasourceTemplate": "github-releases"
    }
  ]
}
